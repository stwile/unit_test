{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "~/src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
}
